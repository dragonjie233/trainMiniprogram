page {
  background: #f1f1f1;
}


/* 单词卡 */
.wc {
  background: #fbfbfb;
  border-radius: var(--bd-r);
  margin-bottom: 30px;
}

.wc movable-area {
  width: auto;
  height: 18vh;
}
.wc movable-view {
  width: 212px;
  height: inherit;
  border-radius: var(--bd-r);
  box-shadow: 0 0 5px -2px #e0e0e0;
}
/* 单词卡滑块 */
.wc-block {
  height: -webkit-fill-available;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  background: #ffffff;
  border-radius: var(--bd-r);
}
.wc-block-word {
  display: block;
  font-size: 1.4rem;
}
/* 单词卡左右选项 */
view[class*="wc-opt"] {
  background: #ffffff;
  padding: 10px 12px;
}
view[class*="wc-opt"] text:first-child {
  font-size: small;
  margin-right: 5px;
}
.wc-opt-left {
  margin-bottom: 8px;
  border-top-left-radius: var(--bd-r);
  border-top-right-radius: var(--bd-r);
  box-shadow: 0 3px 5px -5px #e0e0e0;
}
.wc-opt-right {
  text-align: right;
  margin-top: 8px;
  border-bottom-left-radius: var(--bd-r);
  border-bottom-right-radius: var(--bd-r);
  box-shadow: 0 -3px 5px -5px #e0e0e0;
}


/* 已记单词表 */
scroll-view {
  height: 58vh;
  background: #ffffff;
  border-radius: var(--bd-r);
  box-sizing: border-box;
  padding: 10px 15px;
}
.wordlist {
  display: flex;
  align-items: center;
  padding: 5px 0;
}
.wordlist .wc-opt {
  flex: 1;
  margin-left: 10px;
  padding: 0;
  margin: 0 10px;
  padding: 2px 10px;
  color: #666666;
  background: #f5f5f5;
  border-radius: var(--bd-r);
}