view[class*="wc-cn"] {
  background: #ffffff;
  padding: 10px 12px;
}
view[class*="wc-cn"] text:first-child {
  font-size: small;
  margin-right: 5px;
}

.title {
  display: block;
  text-align: center;
  margin-bottom: 10px;
}

.main {
  background: #ffffff;
  border-radius: var(--bd-r);
  padding: 10px 15px;
}
.wordlist {
  display: flex;
  align-items: center;
  padding: 5px 0;
}
.wordlist .wc-cn {
  flex: 1;
  margin-left: 10px;
  padding: 0;
  margin: 0 10px;
  padding: 2px 10px;
  color: #666666;
  background: #f5f5f5;
  border-radius: var(--bd-r);
}

.clearBtn {
  width: max-content!important;
  font-size: 14px;
  font-weight: normal;
  background: #ffffff!important;
  margin-top: 10px;
  margin-right: 0!important;
  padding: 5px 10px!important;
}